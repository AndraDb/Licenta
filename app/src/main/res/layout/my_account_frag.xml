<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLavender">

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="715dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:srcCompat="@drawable/account" />

            <View
                android:id="@+id/divider14"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/usernameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="My Account"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <View
                android:id="@+id/divider15"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <TableRow
                android:layout_width="405dp"
                android:layout_height="57dp">

                <TextView
                    android:id="@+id/PetType"
                    android:layout_width="99dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:text="Your Pet is a :"
                    android:textColor="@color/colorDarkPurple"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/petType"
                    style="@android:style/Widget.Material.Light.EditText"
                    android:layout_width="291dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="casual"
                    android:inputType="textPersonName"
                    android:singleLine="false"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:id="@+id/divider16"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:id="@+id/PetBreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:text="Your Pet Breed is :"
                    android:textColor="@color/colorDarkPurple" />

                <EditText
                    android:id="@+id/petBreed"
                    style="@android:style/Widget.Material.Light.EditText"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="casual"
                    android:inputType="textPersonName"
                    android:singleLine="false"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:id="@+id/divider17"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:id="@+id/PetBday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:text="Your Pet Age is:"
                    android:textColor="@color/colorDarkPurple" />

                <EditText
                    android:id="@+id/petAge"
                    style="@android:style/Widget.Material.Light.EditText"
                    android:layout_width="296dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="casual"
                    android:inputType="textPersonName"
                    android:singleLine="false"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </TableRow>

            <View
                android:id="@+id/divider18"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:id="@+id/PetName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:text="Your Pet Name is:"
                    android:textColor="@color/colorDarkPurple" />

                <EditText
                    android:id="@+id/petName"
                    style="@android:style/Widget.Material.Light.EditText"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="casual"
                    android:inputType="textPersonName"
                    android:singleLine="false"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:id="@+id/divider19"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:id="@+id/MedIssues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:text="Your Pet Medical Issues:"
                    android:textColor="@color/colorDarkPurple" />

                <EditText
                    android:id="@+id/petMed"
                    android:layout_width="241dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="casual"
                    android:inputType="textMultiLine"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:id="@+id/divider20"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="57dp">

                <TextView
                    android:id="@+id/medIssues"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="casual"
                    android:text="Your Pet Weight is:"
                    android:textColor="@color/colorDarkPurple" />

                <EditText
                    android:id="@+id/petWeight"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="casual"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />
            </TableRow>

            <View
                android:id="@+id/divider27"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="?android:attr/listDivider"
                android:visibility="invisible" />

            <Button
                android:id="@+id/ModifyBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:fontFamily="casual"
                android:text="Modify"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>